<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape android:shape="rectangle" >
            //테두리 두께와 색상
            <stroke
                android:width="2dp"
                android:color="#dcdcdc" />
            //배경색상
            <solid android:color="#FFF" />
        </shape>
    </item>

</layer-list>
